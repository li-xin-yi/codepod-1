    "email": "lihebi.com@gmail.com"
  },
  "homepage": "./",
  "dependencies": {
    "@apollo/client": "^3.3.21",
    "@dnd-kit/core": "^3.1.1",
    "@dnd-kit/sortable": "^4.0.0",
    "@emotion/css": "^11.1.3",
    "@emotion/react": "^11.7.0",
    "@emotion/styled": "^11.6.0",
    "@mui/icons-material": "^5.2.1",
    "@mui/lab": "^5.0.0-alpha.62",
    "@mui/material": "^5.2.3",
    "@mui/styles": "^5.2.3",
    "@reduxjs/toolkit": "^1.6.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "ansi-to-react": "^6.1.6",
    "classnames": "^2.3.1",
    "crypto-js": "^4.0.0",
    "diff2html": "^3.4.8",
    "formik": "^2.2.9",
    "framer-motion": "^4",
    "graphql": "^15.5.1",
    "monaco-editor": "^0.26.1",
    "monaco-editor-webpack-plugin": "^4.1.1",
    "nanoid": "^3.1.23",
    "nanoid-dictionary": "^4.3.0",
    "notistack": "^2.0.3",
    "prismjs": "^1.24.1",
    "react": "^17.0.2",
    "react-app-rewired": "^2.1.8",
    "react-dom": "^17.0.2",
    "react-icons": "^4.2.0",
    "react-monaco-editor": "^0.44.0",
    "react-redux": "^7.2.4",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "redux": "^4.1.0",
    "slate": "^0.63.0",
    "slate-history": "^0.62.0",
    "slate-react": "^0.65.2",
    "socket.io-client": "^4.1.3",
    "stompjs": "^2.3.3",
    "strip-ansi": "^7.0.0",
    "use-resize-observer": "^7.0.0",
    "web-vitals": "^1.0.1",
    "xterm": "^4.13.0",
    "xterm-addon-fit": "^0.5.0"
  },
  "scripts": {
    "start": "PORT=14322 react-app-rewired start",
    "build": "react-app-rewired --max_old_space_size=4096 build",
    "test": "react-app-rewired test",
    "eject": "react-app-rewired eject",
    "ele": "electronmon .",
    "electron:start": "concurrently -k \"cross-env BROWSER=none CPAPP=desktop npm run start\" \"wait-on http://127.0.0.1:3000 && electronmon .\"",
    "package": "npx electron-builder -mwl -c.extraMetadata.main=build/electron.js",
    "electron:package:mac": "electron-builder -m -c.extraMetadata.main=build/electron.js",
    "electron:package:win": "electron-builder -w -c.extraMetadata.main=build/electron.js",
    "electron:package:linux": "electron-builder -l --x64 -c.extraMetadata.main=build/electron.js"
  },
  "build": {
    "appId": "io.codepod",
    "productName": "CodePod",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "public"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "deb"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^6.3.0",
    "cross-env": "^7.0.3",
    "electron": "^15.3.1",
    "electron-builder": "^22.13.1",
    "electron-rebuild": "^3.2.5",
    "electronmon": "^2.0.2",
    "wait-on": "^6.0.0"
  }
}
